{{ '0-custom-base-3.out.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
  }
{%- endstyle -%}

<div class="aptus-base-3__wrapper section-{{ section.id }}-padding page-width">
  <h2 class="main-title">{{ section.settings.title }}</h2>
  <h3 class="main-sub-title">{{ section.settings.sub_title }}</h3>
  <div class="aptus-base-3__container">
    <div class="image__wrapp">
      {%- if section.settings.image != blank -%}
        {{ section.settings.image | image_url: width: 600 | image_tag: class: '__image', loading: 'lazy' }}
      {%- endif -%}
    </div>
    <article>
      <p>{{ section.settings.card_title }}</p>
      <p>{{ section.settings.card_sub_title }}</p>
      <p>
        <span>{{ section.settings.card_galon_number }}</span><span>c</span> p/gallon
      </p>
      {{ section.settings.card_list }}
      <a href="{{ section.settings.card_btn_link }}">{{ section.settings.card_btn_text }}</a>
    </article>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {});
</script>

{% schema %}
{
  "name": "Base-3",
  "tag": "section",
  "class": "aptus__base-3",
  "settings": [
    {
      "type": "header",
      "content": "Title & subtitle section"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title section"
    },
    {
      "type": "text",
      "id": "sub_title",
      "label": "Sub title section"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "header",
      "content": "Card"
    },
    {
      "type": "text",
      "id": "card_title",
      "label": "Title card"
    },
    {
      "type": "text",
      "id": "card_sub_title",
      "label": "Sub title card"
    },
    {
      "type": "number",
      "id": "card_galon_number",
      "label": "Galon number",
      "default": 4
    },
    {
      "type": "richtext",
      "id": "card_list",
      "label": "List data"
    },
    {
      "type": "text",
      "id": "card_btn_text",
      "label": "Button name"
    },
    {
      "type": "url",
      "id": "card_btn_link",
      "label": "Button link"
    },
    {
      "type": "header",
      "content": "Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom",
      "default": 0
    }
  ],
  "presets": [
    {
      "name": "Base 3",
      "category": "Custom"
    }
  ]
}
{% endschema %}
