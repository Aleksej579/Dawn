{{ '0-custom-e-book.out.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
      margin-top: {{ section.settings.margin_top }}px;
      margin-bottom: {{ section.settings.margin_bottom }}px;
  }
  @media screen and (max-width: 1024px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top | divided_by: 2 }}px;
      padding-bottom: {{ section.settings.padding_bottom | divided_by: 2 }}px;
      margin-top: {{ section.settings.margin_top | divided_by: 2 }}px;
      margin-bottom: {{ section.settings.margin_bottom | divided_by: 2 }}px;
    }
  }
  @media screen and (max-width: 450px) {
    .section-{{ section.id }}-padding {
      padding-bottom: 0px;
      margin-bottom: 80px;
    }
  }
  :root {
    --book-color-bg: {{ section.settings.color_scheme.settings.background}};
    --book-color-text: {{ section.settings.color_scheme.settings.text}};
  }
{%- endstyle -%}

<div class="custom-e-book__wrapper section-{{ section.id }}-padding page-width">
  <div class="left__wrapper">
    <h2 class="book__title">{{ section.settings.title }}</h2>
    <div class="book__content">{{ section.settings.content }}</div>
    {%- if section.settings.btn_name != blank -%}
      <a class="book__link" href="{{ section.settings.btn_url }}" download target="_blank">
        {{ section.settings.btn_name -}}
      </a>
    {%- endif -%}
  </div>
  <div class="right__wrapper">
    {% if section.settings.image != blank %}
      <div class="book__image">
        {{ section.settings.image | image_url: width: 700 | image_tag: class: '__image', loading: 'lazy' }}
      </div>
    {% endif %}
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {});
</script>

{% schema %}
{
  "name": "E-book",
  "tag": "section",
  "class": "e-book",
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "default": "scheme_1",
      "label": "Color Scheme"
    },
    {
      "type": "header",
      "content": "Title"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "text",
      "id": "content",
      "label": "Content"
    },
    {
      "type": "header",
      "content": "Image"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "header",
      "content": "Button"
    },
    {
      "type": "text",
      "id": "btn_name",
      "label": "Button name"
    },
    {
      "type": "url",
      "id": "btn_url",
      "label": "Button url"
    },
    {
      "type": "header",
      "content": "Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px",
      "label": "Top",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px",
      "label": "Bottom",
      "default": 0
    },
    {
      "type": "header",
      "content": "Margin"
    },
    {
      "type": "range",
      "id": "margin_top",
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px",
      "label": "Top",
      "default": 0
    },
    {
      "type": "range",
      "id": "margin_bottom",
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px",
      "label": "Bottom",
      "default": 0
    }
  ],
  "presets": [
    {
      "name": "E-book",
      "category": "Custom"
    }
  ]
}
{% endschema %}
