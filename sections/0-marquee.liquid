        {
          "type": "color",
          "id": "text_color",
          "label": "Text color"
        }
      ]
    },
    {
      "type": "icon",
      "name": "Icon",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon image"
        },
        {
          "type": "range",
          "id": "icon_width",
          "label": "Icon width",
          "min": 16,
          "max": 120,
          "step": 4,
          "unit": "px",
          "default": 32
        }
      ]
    },
    {
      "type": "image",
      "name": "Image / Logo",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "range",
          "id": "image_width",
          "label": "Image width",
          "min": 40,
          "max": 400,
          "step": 10,
          "unit": "px",
          "default": 120
        }
      ]
    }
  ],
  "settings": [
    {
      "type": "select",
      "id": "movement_direction",
      "label": "Movement direction",
      "options": [
        { "value": "reverse", "label": "Forward (left)" },
        { "value": "normal",  "label": "Reverse (right)" }
      ],
      "default": "reverse"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 24
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 24
    },
    {
      "type": "range",
      "id": "gap_between_elements",
      "label": "Gap between elements",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "default": 24
    }
  ],
  "presets": [
    {
      "name": "Marquee",
      "category": "Custom",
      "blocks": [
        {
          "type": "text",
          "settings": {
            "text": "Make things better",
            "heading_tag": "h2",
            "font_size": 48
          }
        },
        {
          "type": "text",
          "settings": {
            "text": "Free shipping",
            "heading_tag": "h2",
            "font_size": 48
          }
        },
        {
          "type": "text",
          "settings": {
            "text": "New collection",
            "heading_tag": "h2",
            "font_size": 48
          }
        }
      ]
    }
  ]
}
{% endschema %}
