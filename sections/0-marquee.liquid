{{ '0-marquee.out.css' | asset_url | stylesheet_tag }}
<script src="{{ '0-marquee.js' | asset_url }}" defer="defer"></script>

{%- style -%}
  #shopify-section-{{ section.id }} {
    --section-padding-top: {{ section.settings.padding_top }}px;
    --section-padding-bottom: {{ section.settings.padding_bottom }}px;
    --marquee-gap: {{ section.settings.gap_between_elements }}px;
    --marquee-direction: {{ section.settings.movement_direction }};
  }
{%- endstyle -%}

<div class="marquee-section color-{{ section.settings.color_scheme }} gradient">
  <marquee-component
    class="marquee"
    data-speed-factor="25"
    data-movement-direction="{{ section.settings.movement_direction }}"
  >
    <div class="marquee__wrapper" data-marquee-wrapper>
      <div class="marquee__content" data-marquee-content>
        <div class="marquee__repeated-items" data-marquee-items>
          {%- for block in section.blocks -%}
            {%- case block.type -%}
              {%- when 'text' -%}
                <div class="marquee__item marquee__item--text" {{ block.shopify_attributes }}>
                  <{{ block.settings.heading_tag }}
                    class="marquee__text"
                    style="
                      font-size: {{ block.settings.font_size }}px;
                      {%- if block.settings.text_color != 'rgba(0,0,0,0)' -%}
                        color: {{ block.settings.text_color }};
                      {%- endif -%}
                    "
                  >
                    {{- block.settings.text | escape -}}
                  </{{ block.settings.heading_tag }}>
                </div>

              {%- when 'icon' -%}
                <div class="marquee__item marquee__item--icon" {{ block.shopify_attributes }}>
                  {%- if block.settings.icon != blank -%}
                    {%- assign icon_width = block.settings.icon_width | default: 24 -%}
                    {{
                      block.settings.icon
                      | image_url: width: icon_width
                      | image_tag:
                        width: icon_width,
                        class: 'marquee__icon',
                        loading: 'lazy'
                    }}
                  {%- endif -%}
                </div>

              {%- when 'image' -%}
                <div class="marquee__item marquee__item--image" {{ block.shopify_attributes }}>
                  {%- if block.settings.image != blank -%}
                    {%- assign img_width = block.settings.image_width | default: 120 -%}
                    {{
                      block.settings.image
                      | image_url: width: img_width
                      | image_tag:
                        width: img_width,
                        class: 'marquee__image',
                        loading: 'lazy'
                    }}
                  {%- else -%}
                    {{ 'image' | placeholder_svg_tag: 'marquee__image marquee__image--placeholder' }}
                  {%- endif -%}
                </div>

            {%- endcase -%}
          {%- endfor -%}
        </div>
      </div>
    </div>
  </marquee-component>
</div>

{% schema %}
{
  "name": "Marquee",
  "tag": "section",
  "class": "section",
  "blocks": [
    {
      "type": "text",
      "name": "Text",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "default": "Make things better",
          "label": "Text"
        },
        {
          "type": "select",
