{{ '0-name.out.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }} {
    padding-top: {{ section.settings.padding_top_mobile }}px;
    padding-bottom: {{ section.settings.padding_bottom_mobile }}px;
  }
  @media (min-width: 750px) {
    .section-{{ section.id }} {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
  .name {
    background: {{ section.settings.section_bg }};
  }
  .name .n__container {
    background: {{ section.settings.color_bg }};
  }
{%- endstyle -%}

<div class="name__wrapper section-{{ section.id }} page-width">
  <div
    class="n__container"
    style="background-image: url('{{ section.settings.image_bg | image_url: width: 2560 }}'); background-size: cover; background-position: center;"
  >
    <h2 class="n__title">{{ section.settings.title }}</h2>
    <div class="n__wrapper">
      <div class="n__left-wrapp">
        {%- if section.settings.image_desk != blank and section.settings.image_mobi != blank -%}
          <picture class="n__image-wrapp">
            <source media="(max-width: 750px)" srcset="{{ section.settings.image_mobi | image_url: width: 576 }}">
            <img
              class="n__image"
              src="{{ section.settings.image_desk | image_url: width: 700 }}"
              alt=""
              loading="lazy"
              width="100%"
              height="auto"
            >
          </picture>
        {%- endif -%}
      </div>
      <div class="n__right-wrapp">
        <ul class="n__list-items">
          {%- for block in section.blocks -%}
            {% case block.type %}
              {%- when 'list_items' -%}
                <li class="n__list">
                  <span>{{ block.settings.text_name }}</span>
                  <span>{{ block.settings.text_param }}</span>
                </li>
              {%- when 'block_compare_price' -%}
                <li class="n__compare-price">
                  <span>{{ block.settings.text_name }}</span>
                  <span>{{ block.settings.text_param }}</span>
                </li>
              {%- when 'block__price' -%}
                <li class="n__price">
                  {%- if block.settings.image_name != blank -%}
                    {{ block.settings.image_name | image_url: width: 120 | image_tag: class: '__image', loading: 'lazy' }}
                  {%- endif -%}
                  <span>{{ block.settings.text_param }}</span>
                </li>
            {%- endcase -%}
          {%- endfor -%}
        </ul>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {});
</script>

{% schema %}
{
  "name": "Name",
  "class": "name",
  "tag": "section",
  "settings": [
    {
      "type": "color",
      "id": "section_bg",
      "label": "Section BG-color",
      "default": "#ffffff"
    },
    {
      "type": "image_picker",
      "id": "image_bg",
      "label": "Section BG-image"
    },
    {
      "type": "color",
      "id": "color_bg",
      "label": "Container BG-color",
      "default": "#2C4329"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "header",
      "content": "Main Image"
    },
    {
      "type": "image_picker",
      "id": "image_desk",
      "label": "Main Image for Descktop"
    },
    {
      "type": "image_picker",
      "id": "image_mobi",
      "label": "Main Image for Mobile"
    },
    {
      "type": "header",
      "content": "Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 0
    },
    {
      "type": "header",
      "content": "Mobile section padding"
    },
    {
      "type": "range",
      "id": "padding_top_mobile",
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom_mobile",
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 0
    }
  ],
  "max_blocks": 10,
  "blocks": [
    {
      "type": "list_items",
      "name": "Item",
      "settings": [
        {
          "type": "text",
          "id": "text_name",
          "label": "Item Name"
        },
        {
          "type": "text",
          "id": "text_param",
          "label": "Item Param"
        }
      ]
    },
    {
      "type": "block_compare_price",
      "name": "Block Compare Price",
      "settings": [
        {
          "type": "text",
          "id": "text_name",
          "label": "Item Name"
        },
        {
          "type": "text",
          "id": "text_param",
          "label": "Item Param"
        }
      ]
    },
    {
      "type": "block__price",
      "name": "Block Price",
      "settings": [
        {
          "type": "image_picker",
          "id": "image_name",
          "label": "Item image"
        },
        {
          "type": "text",
          "id": "text_param",
          "label": "Item Param"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Savings"
    }
  ]
}
{% endschema %}
