<div class="page-width">
  <h2>Simple Web Component</h2>
  <my-counter data-start-value="{{ section.settings.initial_count }}">
    <button data-action="decrease">-</button>
    <span data-target="display">0</span>
    <button data-action="increase">+</button>
  </my-counter>
</div>

<script type="module">
  import '{{ 'my-simple-component.js' | asset_url }}';
</script>

{% schema %}
{
  "name": "Simple Component",
  "tag": "section",
  "settings": [
    {
      "type": "range",
      "id": "initial_count",
      "min": 0,
      "max": 100,
      "step": 1,
      "label": "Initial count value",
      "default": 1
    }
  ],
  "presets": [
    {
      "name": "Simple Component",
      "category": "Custom"
    }
  ]
}
{% endschema %}
