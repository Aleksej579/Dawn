{{ '0-custom-popup-blog.out.css' | asset_url | stylesheet_tag }}

<article class="popup-blog-wrapper">
  <span class="icon-close-wrapper">
    <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" fill="#000000" height="800px" width="800px" version="1.1" id="Layer_1" viewBox="0 0 512 512" xml:space="preserve">
      <g>
      	<g>
      		<polygon points="512,59.076 452.922,0 256,196.922 59.076,0 0,59.076 196.922,256 0,452.922 59.076,512 256,315.076 452.922,512     512,452.922 315.076,256   "></polygon>
      	</g>
      </g>
    </svg>
  </span>
  <div class="wrapper__content">Test</div>
</article>

<script>
  document.addEventListener('DOMContentLoaded', (event) => {
    let popupBlog_wrapper = document.querySelector('.popup-blog');
    let popupBlog_iconClose = document.querySelector('.popup-blog-wrapper .icon-close-wrapper');

    if (popupBlog_wrapper && popupBlog_iconClose) {
      popupBlog_wrapper?.addEventListener('click', (event) => {
        if (event.target.classList.contains('popup-blog')) {
          popupBlog_wrapper.classList.add('popup-blog-hide');
        }
      });
      popupBlog_iconClose?.addEventListener('click', () => {
        popupBlog_wrapper.classList.add('popup-blog-hide');
      });
    }
  });
</script>

{% schema %}
{
  "name": "Popup for blog",
  "class": "popup-blog popup-blog-hide",
  "tag": "section",
  "settings": [],
  "presets": [
    {
      "name": "Popup for blog"
    }
  ]
}
{% endschema %}
