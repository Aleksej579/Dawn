<picture>
  <source media="(max-width: 576px)" srcset="{{ section.settings.mobile_image | image_url: width: 600 }}">
  <img
    src="{{ section.settings.desktop_image | image_url: width: 1200 }}"
    alt="{{ section.settings.alt_text | escape }}"
    loading="lazy"
    width="100%"
    height="auto"
  >
</picture>

{% schema %}
{
  "name": "Responsive Image",
  "settings": [
    {
      "type": "image_picker",
      "id": "desktop_image",
      "label": "Desktop Image (≥ 577px)"
    },
    {
      "type": "image_picker",
      "id": "mobile_image",
      "label": "Mobile Image (≤ 576px)"
    },
    {
      "type": "text",
      "id": "alt_text",
      "label": "Alt Text (SEO)",
      "default": "Product image"
    }
  ],
  "presets": [
    {
      "name": "Responsive Image",
      "category": "Image"
    }
  ]
}
{% endschema %}
