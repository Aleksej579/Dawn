{{ '0-custom-header-title.out.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }
  @media screen and (max-width: 768px) {
    .section-{{ section.id }}-padding {
      padding-top: 32px;
      padding-bottom: 48px;
    }
  }
  .custom-header-title {
    background-color: {{ section.settings.bg_color}};
  }
{%- endstyle -%}

<div
  class="custom-header-title__wrapper section-{{ section.id }}-padding"
>
  <div class="container__left">
    <h2 style="color: {{ section.settings.text_color}};">
      <span>{{ section.settings.title }}</span>
      <span>{{ section.settings.sub_title }}</span>
    </h2>
  </div>
  <div class="container__right">
    <p style="color: {{ section.settings.paragraph_color}};">{{ section.settings.text_content }}</p>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {});
</script>

{% schema %}
{
  "name": "Custom header",
  "tag": "section",
  "class": "custom-header-title",
  "settings": [
    {
      "type": "header",
      "content": "Main title"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "text",
      "id": "sub_title",
      "label": "Sub-title"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#272727"
    },
    {
      "type": "header",
      "content": "Main content"
    },
    {
      "type": "text",
      "id": "text_content",
      "label": "Content text"
    },
    {
      "type": "color",
      "id": "paragraph_color",
      "label": "Text color",
      "default": "#a2a2a2"
    },
    {
      "type": "header",
      "content": "Background"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background color",
      "default": "#FFFAF3"
    },
    {
      "type": "header",
      "content": "Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "label": "Top",
      "default": 32
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "label": "Bottom",
      "default": 32
    }
  ],
  "presets": [
    {
      "name": "Custom header"
    }
  ]
}
{% endschema %}
